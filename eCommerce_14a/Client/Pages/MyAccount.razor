@page "/MyAccount"
@using Data;
@inject AuthenticationStateProvider AuthenticationStateProvider
@{ var roleList = new List<string> { "Admin", "Owner", "Manager", "Buyer" }; }

<h1>Manage Your Account</h1>

<div>
    <br />
    <h2>Change your role</h2>
    <br />
    <Dropdown TItem="string" OnSelected="@OnSelected">
        <InitialTip>Please select your role</InitialTip>
        <ChildContent>
            @foreach (var role in roleList)
            {
                <DropdownListItem Item="@role">@role</DropdownListItem>
            }

        </ChildContent>
    </Dropdown>

</div>


@code {

    private void OnSelected(string selection)
    {

        ((MyAuthenticationStateProvider)AuthenticationStateProvider).ChangeRole(selection);
    }

}
